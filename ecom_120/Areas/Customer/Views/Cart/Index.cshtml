@model ecom_120.Models.ViewModels.ShoppingCartVM

<form method="post">
	<br />
	<div class="backgroundWhiteBorder">
		<div class="container">
			<div class="card">
				<div class="card-header bg-dark text-light ml-0 row container">
					<div class="col-6">
						<i class="fa fa-shopping-cart"></i> &nbsp;
						Shopping Cart
					</div>
					<div class="col-6 text-right">
						<a class="btn btn-outline-info btn-sm" asp-controller="Home" asp-area="Customer" asp-action="Index">Continue Shopping</a>
					</div>
				</div>
				@if (Model.ListCart != null && Model.ListCart.Any())
				{
					<div class="card-body">
						@foreach (var list in Model.ListCart)
						{
							<div class="row">
								<div class="col-1 text-center">
									<input class="form-check-input" type="checkbox" name="selectedCartIds" value="@list.Id" />
								</div>

								<div class="d-none d-lg-block col-lg-1 text-end py-2">
									<img src="@list.Product.ImageUrl" class="rounded" style="width:100%;" />
								</div>

								<div class="col-12 text-sm-center col-lg-5 text-lg-left">
									<h5><strong>@list.Product.Title </strong><br />by @list.Product.Author</h5>
									<p><small>@Html.Raw(list.Product.Description)</small></p>
								</div>

								<div class="col-12 text-sm-center col-lg-6 text-lg-right row">
									<div class="col-4 text-md-right" style="padding-top:5px;">
										<h6><strong>@list.Price <span class="text-muted">x</span> @list.Count = @(list.Price * list.Count) </strong></h6>
									</div>
									<div class="col-6 col-sm-4 col-lg-6">
										<div class="float-right mx-1">
											<a asp-action="Plus" asp-route-id="@list.Id" class="btn btn-primary">
												<i class="fas fa-plus"></i>
											</a>
										</div>
										<div class="float-right mx-1">
											<a asp-action="Minus" asp-route-id="@list.Id" class="btn btn-danger">
												<i class="fas fa-minus"></i>
											</a>
										</div>
									</div>
									<div class="col-2 col-sm-4 col-lg-2 text-right">
										<a asp-action="Delete" asp-route-id="@list.Id" class="btn btn-outline-danger">
											<i class="fas fa-trash"></i>
										</a>
									</div>
								</div>
							</div>
						}

						<hr />
						<div class="row">
							<div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
								<ul class="list-group">
									<li class="list-group-item d-flex justify-content-between bg-light">
										<span class="text-info"> Total (USD)</span>
										<strong class="text-info">$ <span id="txtOrderTotal">@Model.OrderHeader.OrderTotal</span></strong>
									</li>
								</ul>
							</div>
						</div>
					</div>

					<div class="card-footer">
						<div class="card-footer row">
							<div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">
								<a asp-action="Summary" class="btn btn-success form-control">Summary</a>
							</div>
						</div>
					</div>
				}

				else
				{
					<div class="text-center p-5">
						<h3>Your cart is empty!</h3>
						<a class="btn btn-primary mt-3" asp-area="Customer" asp-controller="Home" asp-action="Index">
							Go to Shopping
						</a>
					</div>
				}
			</div>
		</div>
	</div>
</form>