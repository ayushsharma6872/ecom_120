@model IEnumerable<ecom_120.Models.Product>

<div class="container mt-4">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var product in Model)
        {
            <div class="col d-flex">
                <div class="card shadow-sm border-0 w-100 product-card transition" style="border-radius: 12px; display: flex; flex-direction: column; height: 100%;">
                    
                    <img src="@product.ImageUrl" class="card-img-top rounded-top" style="width: 100%; height: auto; aspect-ratio: 2/3; object-fit: contain;" alt="@product.Title" />

                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="card-title fw-bold text-dark">@product.Title</h5>
                            <p class="text-muted mb-1">by <span class="fw-semibold text-primary">@product.Author</span></p>
                        </div>
                        <div class="mt-2">
                            <p class="mb-1">List Price: <span class="text-muted text-decoration-line-through">$@product.ListPrice.ToString("0.00")</span></p>
                            <p class="text-success fw-bold">As low as: $@product.Price100.ToString("0.00")</p>
                        </div>
                    </div>

                    <div class="card-footer bg-white border-top-0 mt-auto">
                        <a asp-action="Details" asp-route-id="@product.id" class="btn btn-outline-primary w-100">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>